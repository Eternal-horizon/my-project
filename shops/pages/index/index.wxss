.banner image{width:100%;height:400rpx;}
.banner{height:400rpx;}
.search{background: #fff;padding: 20rpx 25rpx;}
.search view{position: relative;}
.search input{width:100%;height:60rpx;text-align:center;background:#f5f5f5;}
.search image{position:absolute;left:40%;top:16rpx;width:28rpx;height:28rpx;z-index:100;}
.goods-list{display:inline-block;width:240rpx;padding-bottom:40rpx;margin:0 20rpx 0 0;}
.goods-img{width:100%;height:240rpx;}
.goods-title{margin-top:19rpx;padding-right:25rpx;font-size:24rpx;color:#000;}
.goods-tips{font-size:20rpx;color: #a1a1a1;margin: 10rpx 0 10rpx;}
.goods-price{font-size: 24rpx;color: #b21e1e;}
.new{margin-top:20rpx;padding:40rpx 0 0 25rpx;background: #fff;}
.new-title{margin-bottom:40rpx;padding-right:25rpx;}
.new-title text{font-size: 28rpx;}
.new-title image{width:12rpx;height:20rpx;margin-left:15rpx;vertical-align: -1rpx;}
.new-title navigator{padding-right:28rpx;font-size: 22rpx;color: #a1a1a1;}
.goods-wrap{font-size: 0;white-space:nowrap;height:390rpx;}
.theme{margin-top:20rpx;padding:40rpx 0 40rpx 25rpx;background: #fff;}
.theme-title{margin-bottom: 40rpx;font-size:28rpx;}
.theme-wrap{font-size: 0;white-space: nowrap;height:240rpx;}
.theme-wrap navigator{display:inline-block;width:510rpx;height:240rpx;margin-right:30rpx;}
.theme-wrap image{display:inline-block;width:510rpx;height:240rpx;}
.goods{background: #fff;margin-top:20rpx;padding: 0 25rpx 0 25rpx;}
.goods-tab{padding:40rpx 0 30rpx;}
.goods-tab scroll-view{white-space:nowrap;}
.goods-tab view{display:inline-block;margin-right:75rpx;color:#a1a1a1 ;font-size: 28rpx;padding-bottom:20rpx;}
.goods-tab .hover{color: #000;border-bottom: 1px solid #000;}
.goods-main .goods-list{width:340rpx;margin:0;}
.goods-main .goods-img{height:340rpx;}
.scroll{position: absolute;left:0;width:100%;height:100%;top:0;}
.topnav .goods-tab{position: fixed;left:0;top:0;padding:0 25rpx;width:100%;background: #fff;}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{width:100rpx;}
.banner .wx-swiper-dot{ width:13rpx; border-radius:100%;display: inline-flex; height: 13rpx; margin-left: 13rpx; justify-content:space-between; } 
.banner .wx-swiper-dot::before{ content: ''; flex-grow: 1; background:none; border-radius: 100%;border:1px solid #000; } 
.banner .wx-swiper-dot-active::before{ background:#000; }